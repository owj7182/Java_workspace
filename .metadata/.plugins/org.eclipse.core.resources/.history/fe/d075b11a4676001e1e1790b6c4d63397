package mobile;

public class MobileTest {

	public static void main(String[] args) {
		// 각각의 Mobile 객체 생성
		Mobile ltab = new Ltab("Ltab", 500, "AP-01");
		Mobile otab = new Otab("Otab", 1000, "AND-20");
		
		// 생성된 객체의 정보 출력
		System.out.println("Mobile\t" + "Battery\t" + "os\t");
		System.out.println("------------------------");
		
		System.out.print(ltab.getMobileName() + "\t");
		System.out.print(ltab.getBatterySize()+ "\t");
		System.out.println(ltab.getOsType());
		
		System.out.print(otab.getMobileName() + "\t");
		System.out.print(otab.getBatterySize()+ "\t");
		System.out.println(otab.getOsType());
		// 각각의 Mobile 객체에 10분씩 충전
		System.out.println();
		System.out.println("10분 충전");
		System.out.println("------------------------");
		
		ltab.charge(10);
		otab.charge(10);
		// 10분 충전 후 객체 정보 출력
		
		// 각각의 Mobile 객체에 5분씩 통화
		
		// 5분 통화 후 객체 정보 출력
	}

}
